<%= form_for [@company, @job] do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :level_of_interest %>
  <%= f.number_field :level_of_interest %>

  <%= f.label :category %>
  <%= f.collection_select(:category_id, Category.all.order(:title), :id, :title, options = {:prompt => "Select a Category"}) %>

  <%= f.submit %>
<% end %>
<br>
<ul>
  <%= link_to "Add a New Category", new_category_path %>
</ul>
